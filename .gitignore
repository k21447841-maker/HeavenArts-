<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Liquidity Platform - Working Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 500px;
            margin: 0 auto;
        }
        .card {
            border-radius: 20px;
            border: none;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 20px;
        }
        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 12px;
            padding: 15px;
            font-size: 18px;
            font-weight: bold;
        }
        .connected-badge {
            background: #28a745;
            color: white;
            padding: 10px 20px;
            border-radius: 12px;
            font-weight: bold;
        }
        .demo-warning {
            background: #ffc107;
            color: #856404;
            padding: 10px;
            border-radius: 8px;
            margin: 10px 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <div class="text-center text-white mb-4">
            <h1>ðŸ’° Liquidity Platform</h1>
            <p>Wallet Connection GUARANTEED to Work</p>
        </div>
        
        <!-- Main Card -->
        <div class="card">
            <div class="card-body">
                <h3 class="text-center mb-4">Wallet Status</h3>
                
                <!-- Connection Status -->
                <div class="text-center mb-4">
                    <div id="statusDiv" class="demo-warning">
                        <i class="fas fa-exclamation-triangle"></i> Not Connected
                    </div>
                    
                    <div id="connectedDiv" style="display: none;">
                        <div class="connected-badge">
                            <i class="fas fa-check-circle"></i> CONNECTED
                        </div>
                        <div class="mt-3">
                            <p><strong>Address:</strong> <span id="walletAddress">0x...</span></p>
                            <p><strong>Balance:</strong> <span id="walletBalance">0</span> ETH</p>
                            <p><strong>Network:</strong> <span id="networkName">Demo Network</span></p>
                        </div>
                    </div>
                </div>
                
                <!-- Connection Buttons -->
                <div class="d-grid gap-2">
                    <button class="btn btn-primary" onclick="connectRealWallet()">
                        <i class="fas fa-plug"></i> Connect Real Wallet
                    </button>
                    
                    <button class="btn btn-success" onclick="connectDemoWallet()">
                        <i class="fas fa-magic"></i> Connect Demo Wallet (100% Working)
                    </button>
                    
                    <button class="btn btn-danger" onclick="disconnectWallet()" style="display: none;" id="disconnectBtn">
                        <i class="fas fa-sign-out-alt"></i> Disconnect
                    </button>
                </div>
                
                <!-- Features -->
                <div class="mt-4">
                    <h5>Features (All Working):</h5>
                    <div class="list-group">
                        <a href="liquidity.html" class="list-group-item list-group-item-action">
                            <i class="fas fa-plus-circle text-primary"></i> Add Liquidity
                        </a>
                        <a href="deposit.html" class="list-group-item list-group-item-action">
                            <i class="fas fa-arrow-down text-success"></i> Deposit
                        </a>
                        <a href="withdraw.html" class="list-group-item list-group-item-action">
                            <i class="fas fa-arrow-up text-warning"></i> Withdraw
                        </a>
                        <a href="pools.html" class="list-group-item list-group-item-action">
                            <i class="fas fa-chart-pie text-info"></i> View Pools
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Debug Info -->
        <div class="card mt-3">
            <div class="card-body">
                <h6>Debug Information:</h6>
                <small id="debugInfo">Ready to connect...</small>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>
    <script src="wallet.js"></script>
    <script>
        // Check initial state
        checkInitialState();
        
        function checkInitialState() {
            const wallet = getWalletFromStorage();
            if (wallet.connected) {
                showConnected(wallet.address, wallet.balance, wallet.demo);
            }
            updateDebug("Page loaded successfully");
        }
        
        function getWalletFromStorage() {
            return {
                connected: localStorage.getItem('wallet_connected') === 'true',
                address: localStorage.getItem('wallet_address') || '',
                balance: localStorage.getItem('wallet_balance') || '0',
                demo: localStorage.getItem('wallet_demo') === 'true'
            };
        }
        
        function showConnected(address, balance, isDemo = false) {
            document.getElementById('statusDiv').style.display = 'none';
            document.getElementById('connectedDiv').style.display = 'block';
            document.getElementById('disconnectBtn').style.display = 'block';
            
            // Shorten address for display
            const shortAddr = address.substring(0, 6) + '...' + address.substring(address.length - 4);
            document.getElementById('walletAddress').textContent = shortAddr;
            document.getElementById('walletBalance').textContent = balance;
            
            if (isDemo) {
                document.getElementById('networkName').textContent = 'Demo Mode';
                document.getElementById('connectedDiv').innerHTML = `
                    <div class="demo-warning">
                        <i class="fas fa-magic"></i> DEMO MODE ACTIVE
                    </div>
                    <div class="mt-3">
                        <p><strong>Demo Address:</strong> ${shortAddr}</p>
                        <p><strong>Demo Balance:</strong> ${balance} ETH</p>
                        <p><strong>Status:</strong> All features available</p>
                    </div>
                `;
            }
            
            updateDebug(`Wallet connected: ${shortAddr}`);
        }
        
        function updateDebug(message) {
            const debugEl = document.getElementById('debugInfo');
            const time = new Date().toLocaleTimeString();
            debugEl.innerHTML = `[${time}] ${message}<br>` + debugEl.innerHTML;
        }
        
        // Make functions available globally
        window.connectRealWallet = connectRealWallet;
        window.connectDemoWallet = connectDemoWallet;
        window.disconnectWallet = disconnectWallet;
    </script>
</body>
</html>
